@model IEnumerable<WildPath.ViewModels.UserVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <span>Email</span>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>@item.Email</td>
                <td>
                    @Html.ActionLink(
                             "View Roles"
                             , "Detail"
                             , new { userName = item.Email })
                </td>
            </tr>
}
    </tbody>
</table>
