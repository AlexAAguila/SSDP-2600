@model WildPath.ViewModels.UserRoleVM

@{
    ViewData["Title"] = "User Roles Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Assign User Role</h4>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                @Html.DropDownList("Email",
                new SelectList(ViewBag.UserSelectList, "Value", "Text",
                ViewBag.SelectedUser),
                "Select User", new { @id = "email", @class = "form-control", @style = "margin-bottom: 15px;" })
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                @Html.DropDownList("RoleName",
                new SelectList(ViewBag.RoleSelectList, "Value", "Text"),
                "Select Role", new { @id = "roleName", @class = "form-control" })
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="hidden" asp-for-"Email" value="Email" />
                <input type="hidden" asp-for-"RoleName" value="RoleName" />
                <button id="assignUserRole" type="submit"
                        class="w-25 btn btn-sm btn-primary">
                    Assign
                </button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
