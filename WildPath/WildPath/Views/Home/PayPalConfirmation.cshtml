@model WildPath.ViewModels.CheckoutVM
@{
    ViewData["Title"] = "Payment Confirmation";
}

<style>
    html, body, .container, div {
        margin: 0;
        padding: 0;
    }

    .grey-header {
        background-color: rgba(217, 217, 217, 0.5);
        color: black;
        text-align: center;
        padding: 10px 0;
        font-size: 15px;
        margin-top: -15px;
    }
</style>

<br />
<br />
<div class="grey-header">
    <span class="bold-text">Your order has shipped</span>
</div>

<div class="confirmation-message">
    <span class="text-left">
        <span style="font-size: 2em;">Hi @Model.PayerFullName,</span><br />
        <span style="font-size: 1.4em;">
            <span>
                Your shipment with tracking number: <br />
                @Model.TrackingNumber is ready. </span><br />
            <span>Estimated delivery date:<br />
                @Model.EstimatedDeliveryDate</span><br />

            <span>Your $</span><span>@Model.TotalPrice</span>
            <span>CAD</span>
            <span> </span>
            <span>@Model.CaptureId transaction was Successful</span>
        </span>
    </span><br /><br />
</div>


<div class="text-center" style="color:darkred;">
    <span class="text-center">
        <span style="font-size: 2em;">Congratulations @Model.PayerFullName!</span><br /><br /><br /><br />
        <span style="font-size: 1.4em;">
            <span>Your $</span><span>@Model.TotalPrice</span>
            <span>CAD</span>
            <span>@Model.CaptureId transaction was Successful</span>
        </span>
    </span><br /><br />
    <span class="text-center" style="font-size: 1.2em;">Keep this transaction Id for future reference.</span>

    <span style="color: black; font-size: 1.2em;">PAYID-MXDKHDQ1HA84807CL970332B</span>
</div>
