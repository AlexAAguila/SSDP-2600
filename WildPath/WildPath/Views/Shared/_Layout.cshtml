<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WildPath</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WildPath.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="WildPath Logo" height="90px">
                </a>
                     <partial name="_LoginPartial" />
                    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ShoppingCart">
                        <i class="bi bi-cart"></i> Shopping Cart
                    </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @*                         <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CustomerCare">Customer Care</a>
                        </li> *@

                        <!-- Mobile View: Direct category links, hidden on lg and up -->
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ShopAll">Shop All</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Backpacks">Backpacks</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Tents">Tents</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Sleeping Gear">Sleeping Gear</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Camping Furniture">Camping Furniture</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Accessories">Accessories</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item d-lg-none">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Images">Image</a>
                            </li>
                            <li class="nav-item d-lg-none">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="SaveImage">Save Image</a>
                            </li>

                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Images">Image</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="SaveImage">Save Image</a></li>
                            <li> <a class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="Index">Transactions</a></li>
                        }

                        <li class="nav-item dropdown d-none d-lg-block">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Products
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="ShopAll">Shop All</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Backpacks">Backpacks</a>
                                </li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Tents">Tents</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Sleeping Gear">Sleeping Gear</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Camping Furniture">Camping Furniture</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="ShopAll" asp-route-searchString="Accessories">Accessories</a></li>
                            </ul>


                            @if (User.IsInRole("Admin"))
                            {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="UserRole" asp-action="Index">Users</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Role" asp-action="Index">Roles</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">Products</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Images">Image</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="SaveImage">Save Image</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Transaction" asp-action="Index">Transactions</a></li>
                                </ul>



                            </li>
                            }

                    </ul>
                    <partial name="_LoginPartial" />
                    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ShoppingCart">
                        <i class="bi bi-cart"></i> Shopping Cart
                    </a>

                </div>
            </div>
        </nav>

    </header>

    <div class="container">
        @RenderBody()
        @*         <main role="main" class="pb-3">
        @RenderBody()
        </main> *@
    </div>


    <footer class="custom-footer">
        <div class="container">
            <div class="footer-content">
                <p class="social-heading">Discover our Social Side</p>
                <div class="social-icons">
                    <a href="https://www.instagram.com/" target="_blank" class="social-icon">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a href="https://twitter.com/" target="_blank" class="social-icon">
                        <i class="bi bi-twitter"></i>
                    </a>
                </div>
                <div class="footer-links">
                    <a href="/Home/CustomerCare" class="footer-link">Customer Care</a> -
                    <a href="/Home/TermsAndConditions" class="footer-link">Terms & Conditions</a> -
                    <a href="#" class="footer-link">Privacy & Security</a>
                </div>
                <p class="footer-text">Copyright &copy; Wild Path Gear Ltd - Company Registration <br />No: 3417738 VAT Registered: GB 796 3471 82</p>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
