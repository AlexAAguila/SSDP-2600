@model WildPath.ViewModels.ProductVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html, body, .container, div {
        margin: 0;
        padding: 0;
    }

    .free-shipping {
        background-color: rgba(217, 217, 217, 0.5);
        color: black;
        text-align: center;
        padding: 10px 0;
        font-size: 15px;
        margin-top: -15px;
    }

    *, *:before, *:after {
        box-sizing: border-box;
    }
</style>

<div class="free-shipping">
    <span style="font-weight: bold;">Tents</span>
</div>

<div>
    @{
        var image = Model.ImageStore.FirstOrDefault(i => i.ImageId.ToString() == Model.Item.ItemImageId);
        if (image != null)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(image.Image)" alt="@image.FileName" />
        }
    }
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Item.ItemName)
    </dd>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Supplier)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ItemDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemDetails)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Colour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Colour)
        </dd>
    </dl>
</div>

